<h2>User info</h2>
<%= form_with model: @user, local:true  do |f| %>
  <h6>Name</h6>
  <%= f.text_field :name %>
  <h6>image</h6>
  <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
  <h6>Introduction</h6>
  <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>
